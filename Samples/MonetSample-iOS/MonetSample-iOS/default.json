{
    "identifier": "com.digipolitan.theme.default",
    "@colors": {
        "primary": "#FF877F"
    },
    "@fonts": {
        "regular-body": {
            "name": "Optima-Regular",
            "size": 48
        },
        "bold-action": {
            "name": "Optima-Bold",
            "size": 15
        }
    },
    "appearances": {
        "views": {
            "scene" : {
                "backgroundColor": "#123456"
            }
        },
        "texts": {
            "body": {
                "backgroundColor": "@colors/primary",
                "foregroundColor": "#323233",
                "font": "@fonts/regular-body"
            },
            "action": {
                "backgroundColor": "@colors/primary",
                "foregroundColor": "#FFFFFF",
                "font": "@fonts/bold-action"
            }
        }
    }
}
